= render :partial => "/admin/event_types/left_menu"

%h2 Plan zajęć

%p= link_to "Dodaj nowe wydarzenie/zajęcia", new_admin_timetable_event_path

%table#timetable.admin_table
  %thead
    %tr
      %th#hours Godz
      %th Poniedziałek
      %th Wtorek
      %th Środa
      %th Czwartek
      %th Piątek
      %th Sobota
      %th Niedziela
  %tbody
    %tr
      %td#hours_td
        - for i in 7..21
          %div.hour= i.to_s + ":00"
      - @timetable.events_for_all_days.each do |e|
        %td
          - e.each do |evt|
            %div.event{ :style => "height: " + evt.height_pixels + "; position: absolute; top: " + evt.pixels_from_top + "; background: " + evt.event_type.color }
              %p.title= evt.title
              %p.time
                = evt.start.strftime("%H:%M")
                \-
                = evt.end.strftime("%H:%M")