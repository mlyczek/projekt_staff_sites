<!DOCTYPE html>
<html>
<head>
  <title>Projekt</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
	<div id="login_info">
	<% if teacher_signed_in? %>
	  <%= link_to('Wyloguj', destroy_teacher_session_path) %>
	<% else %>
	  <%= link_to('Zaloguj', new_teacher_session_path)  %>
	<% end %>
	</div>

	<div id="logo">
	  Uniwerek
	</div>
  </div>

  <div id="content">
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>
  </div>

  <div id="footer">
	Copyright
  </div>

</body>
</html>
