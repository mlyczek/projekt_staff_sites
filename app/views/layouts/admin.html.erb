<!DOCTYPE html>
<html>
<head>
  <title>Projekt</title>
  <%= stylesheet_link_tag :all, :recursive => true %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
	<div id="login_info">
	<% if teacher_signed_in? %>
	  <%= link_to('Wyloguj', destroy_teacher_session_path) %>
	<% else %>
	  <%= link_to('Zaloguj', new_teacher_session_path)  %>
	<% end %>
	</div>

	<div id="logo">
	  <img src="/images/logouwr.png" alt="logo uniwersytetu" />
	</div>
  </div>

  <div id="menu">
	<ul>
	  <li><%= link_to "Dane kontaktowe", { :controller => "contact", :action => "index" }  %> </li>
	  <li><%= link_to "Plan zajęć", "http://google.pl"  %></li>
	  <li><%= link_to "Przedmioty" %></li>
	  <li><%= link_to "Publikacje" %></li>
	  <li><%= link_to "Dodatkowe podstrony" %></li>
	</ul>
  </div>

  <div id="content">
	<div id="local_menu">
	  <%= yield(:local_menu) %>
	</div>
	<div id="local_content">
	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>

	  <%= yield %>
	</div>
  </div>

  <div id="footer">
	Copyright
  </div>

</body>
</html>
